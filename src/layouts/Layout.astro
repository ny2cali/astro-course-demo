---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import "@fontsource/cabin"; // Defaults to weight 400.

interface Props {
	title: string;
	description?: string;
	image?: string;
}
const { 
	title = 'Rhythm Nation',
	description = 'A community blog for Music Producers and Enthusiasts',
	image = '../content/posts/images/drums.png',
	} = Astro.props;
---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		# Open Graph / Facebook
		<meta property="og:type" content="website" />
		<meta property="og:image" content={image} />
		<meta property="og:image:alt" content={description} />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:description" content={description} />
		<meta property="og:title" content={title} />

		# Twitter
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:image" content={image} />
		<meta property="twitter:image:alt" content={description} />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:title" content={title} />

	</head>
	<body class="min-h-screen grid grid-rows-[auto_1fr_auto]">
		<Header />
		<slot />
		<Footer />
	</body>
</html>

