---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
// import type { CollectionEntry } from "astro:assets";
type Props = {
    posts: CollectionEntry<"posts">;
}

const { post } = Astro.props;
---
<article>
    <a href="{`/blog/${post.slug}`}">
        <img src={post.data.image} alt={post.data.title}
            width={1024} height={1024 / 2}
            class="rounded-2xl shadow-2xl mb-6 aspect-thumbnail"
        /> 
    <a href={`/blog/${post.slug}`} class="text-4xl text-zinc-900 mb-4 font-semibold inline-block">
        {post.data.title}
    </a>
    <p class="text-zinc-500 text-2xl mb-9 line-clamp-2">
        {post.body}
    </p>
</article>

